{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "enabledManagers": ["npm", "custom.regex"],
  "labels": ["dependencies"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update packageManager field in package.json",
      "fileMatch": ["^package\\.json$"],
      "matchStrings": ["\"packageManager\":\\s*\"(?<depName>.*?)@(?<currentValue>.*?)\""],
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "description": "Update Biome schema version in biome.jsonc",
      "fileMatch": ["^biome\\.jsonc?$"],
      "matchStrings": [
        "\"\\$schema\":\\s*\"https://biomejs\\.dev/schemas/(?<currentValue>.*?)/schema\\.json\""
      ],
      "depNameTemplate": "@biomejs/biome",
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDepTypes": ["packageManager"],
      "groupName": "Package Manager"
    },
    {
      "matchPackageNames": ["@biomejs/biome"],
      "groupName": "Biome"
    }
  ]
}
