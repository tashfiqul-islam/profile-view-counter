{
  "name": "profile-view-counter",
  "version": "2.0.1",
  "type": "module",
  "description": "A blazing-fast profile view counter for GitHub READMEs, powered by Cloudflare Workers",
  "author": "Tashfiqul Islam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tashfiqul-islam/profile-view-counter"
  },
  "packageManager": "bun@1.3.5",
  "keywords": [
    "cloudflare-workers",
    "profile-views",
    "github",
    "badge",
    "counter",
    "hono",
    "typescript"
  ],
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --remote",
    "cf-typegen": "wrangler types",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.6.1",
    "hono": "^4.11.3",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@cloudflare/vitest-pool-workers": "0.12.1",
    "@cloudflare/workers-types": "4.20260109.0",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@commitlint/types": "20.3.1",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.2",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "commitizen": "4.3.1",
    "cz-git": "1.12.0",
    "lefthook": "2.0.13",
    "semantic-release": "25.0.2",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "wrangler": "4.58.0"
  }
}
