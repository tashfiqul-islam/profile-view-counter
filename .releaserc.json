{
  "branches": ["master", "main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ğŸš€ Features" },
            { "type": "fix", "section": "ğŸ©¹ Fixes" },
            { "type": "docs", "section": "ğŸ“– Documentation" },
            { "type": "style", "section": "ğŸ¨ Styles" },
            { "type": "refactor", "section": "ğŸ’… Refactor" },
            { "type": "perf", "section": "ğŸ”¥ Performance" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ğŸ“¦ Build" },
            { "type": "ci", "section": "ğŸ¤– CI" },
            { "type": "chore", "section": "ğŸ¡ Chore" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "types", "section": "ğŸŒŠ Types" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changelog\n\nAll notable changes to **Profile View Counter** are documented in this file. See our [Contribution Guidelines](https://github.com/tashfiqul-islam/profile-view-counter#-contributing) for commit guidelines."
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
